<p id="notice"><%= notice %></p>



<div class="container">




<p>
  <strong>Task title:</strong>
  <%= @task.task_title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @task.description %>
</p>

<p>
  <strong>Location:</strong>
  <%= @task.location %>
</p>

<p>
  <strong>Date:</strong>
  <%= @task.date.strftime("%B %e, %Y at %I:%M %p")  %>
</p>

<p>
  <strong>Offering$</strong>
  <%= @task.offering %>
</p>

<p>
  <strong>Host:</strong>
  <%= @task.host.user.name %>
</p>

<%= render "attachments/form", attachment: @attachment , task: @task %>
<%= link_to "Jobs complete", new_charge_path(:task_id => @task.id), method: :get, class: "btn btn-primary" %>
<br>
<%= link_to 'Back', job_page_path %>
</div>
